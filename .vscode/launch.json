{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Azurite Blob Service",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "lib/blob/bin.ts"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current TS File",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${relativeFile}"
            ],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current Mocha TS File",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${relativeFile}"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        },
    ]
}